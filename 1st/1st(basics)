//👍//declare a variable is so easy, we don't need to define the data type of any variable
let a;
//👍//undefined (by default)
a = 10;
a = 10.1;
a = "hello i'm a string";
a = 'this is also string';
console.log("variable contains ", a);





//👍//printing patterns
let string = "";
let string2 = "";
let num = 10;
for(let i =0;i<=num;i++){
    string =string+ "*";
    console.log(string);
}

for(let i =num;i>=0;i--){
    string2 = string2+ "*";
    console.log(string2);
}


//👍//functions
//fuction definition

//nither return type nor parameter is necessary.
//math.random  function generates value b/w 'o' to '1'

function sayHi(param){
    console.log("hello volleyball captain");
    let rav = Maths.random() > 0.5?true :"less than 0.5"; 
    return rav;

}
let rav = sayHi([1,3,4,5,6]);
console.log("rav = ", rav);



//👍//prime numbers
//👍
let n=10;
for(let i=0;i<n;i++){
    console.log(i,"this is the number");
}

// is prime ?
let num = 23;
let flag=true;
for(let i=2;i<n;i++){
    if(num%i==0){
        flag=false;
        break;
    }
    
}
if(flag==true){
    console.log(num, "is a prime number");
}else{
    console.log(num, "is not a prime number");
}




